<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mbsbahru.roboboat2016_barunastra.MisiView
        android:id="@+id/activity_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        opencv:show_fps="true"
        opencv:camera_id="any"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tombolH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textH"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/tombolS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textS"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/tombolV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textV"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/tombolED"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textED"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/tombolEW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textExp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/tombolTiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textTiang"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/tombolMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textMenu"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lay"
        android:layout_marginBottom="8dp" /> <!-- Added margin for spacing -->

    <SeekBar
        android:id="@+id/min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/max"
        android:layout_marginBottom="8dp" /> <!-- Added margin for spacing -->

</RelativeLayout>
