<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
   xmlns:tools="http://schemas.android.com/tools"  
   xmlns:opencv="http://schemas.android.com/apk/res-auto"  
   android:layout_width="match_parent"  
   android:layout_height="match_parent" >  
   <org.opencv.android.JavaCameraView
     android:layout_width="match_parent"  
     android:layout_height="match_parent"
     android:id="@+id/activity_surface_view"  
     opencv:show_fps="true"  
     opencv:camera_id="any" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabstart"
        android:layout_alignRight="@id/activity_surface_view"
        android:layout_width="127dp"
        android:layout_height="125dp"
        android:clickable="true"
        opencv:srcCompat="@android:drawable/ic_media_play" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/activity_surface_view"
        android:layout_alignBottom="@id/activity_surface_view"
        android:clickable="true"
        opencv:srcCompat="@android:drawable/ic_menu_revert" />
</RelativeLayout>  

